{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"plugins": ["react"],
	"rules": {
		"no-use-before-define": "off",
		// "@javascript-eslint/no-use-before-define": ["error"],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
